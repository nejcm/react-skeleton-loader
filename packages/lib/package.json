{
  "name": "@nejcm/react-skeleton-loader",
  "version": "1.0.1",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "types": "./dist/main.d.ts",
  "main": "./dist/react-skeleton-loader.umd.js",
  "module": "./dist/react-skeleton-loader.es.js",
  "exports": {
    ".": {
      "import": "./dist/react-skeleton-loader.es.js",
      "require": "./dist/react-skeleton-loader.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nejcm/react-skeleton-loader"
  },
  "bugs": {
    "url": "https://github.com/nejc/react-skeleton-loader/issues"
  },
  "homepage": "https://github.com/nejcm/react-skeleton-loader",
  "engines": {
    "node": ">=16",
    "npm": ">=6"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "format": "prettier ./src --write",
    "lint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint:ts": "tsc --noEmit",
    "test": "jest",
    "test:cov": "jest --coverage --colors && jest-coverage-badges",
    "test:watch": "jest --watch",
    "test:build": "jest --coverage --colors --silent && jest-coverage-badges",
    "validate": "yarn format && yarn lint && yarn test:build",
    "setup": "yarn install && yarn validate",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=16.9"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.35.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.4.3",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-jsdom": "^29.4.3",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "jest-resolve": "^29.4.3",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.3.0",
    "semantic-release": "^20.1.1",
    "typescript": "^4.9.5",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "vite": "^4.1.4"
  }
}
